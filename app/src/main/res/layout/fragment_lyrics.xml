<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/lyricsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <RelativeLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/btnCloseLyrics"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lyricsTrackTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFD700"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/lyricsTrackArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#80FFD700"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnCloseLyrics"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"/>
                </RelativeLayout>

                <!-- Lyrics Text -->
                <EditText
                    android:id="@+id/lyricsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:gravity="top"
                    android:hint="Введите текст..."
                    android:inputType="textMultiLine"
                    android:minHeight="200dp"
                    android:textColor="#FFD700"
                    android:textColorHint="#80FFD700"
                    android:textSize="16sp"/>
            </LinearLayout>
        </ScrollView>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveLyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:backgroundTint="#FFD700"
            android:enabled="false"
            android:text="Сохранить"
            android:textColor="#000000"/>
    </RelativeLayout>
</FrameLayout>